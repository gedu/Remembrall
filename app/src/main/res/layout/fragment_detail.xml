<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gemapps.remembrall.ui.detail.DetailFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.54"
                android:gravity="center"
                android:textSize="18sp"
                android:text="@string/total"/>

            <TextView
                android:id="@+id/total_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="32sp"
                android:textStyle="bold"
                android:drawableStart="@drawable/ic_attach_money_black_24px"
                tools:text="1800.00"/>

            <Button
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:id="@+id/add_delivery_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:drawableStart="@drawable/ic_add_accent_36px"
                android:text="@string/add_delivery"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/client_mobile_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:padding="@dimen/activity_vertical_margin"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_message_black_24px"
                    android:gravity="center_vertical"
                    tools:text="159999999"/>

                <TextView
                    android:id="@+id/client_address_text"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_vertical_margin"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_location_on_black_24px"
                    android:gravity="center_vertical"
                    tools:text="Av. Lafuente 1590"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/client_whatsapp_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:padding="@dimen/activity_vertical_margin"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_whatsapp_black"
                    android:gravity="center_vertical"
                    tools:text="159999999"/>

                <TextView
                    android:id="@+id/client_email_text"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_vertical_margin"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_email_black_24px"
                    android:gravity="center_vertical"
                    tools:text="mail@gmail.com"/>

            </LinearLayout>

        </LinearLayout>



    </android.support.v7.widget.CardView>

    <ListView
        android:id="@+id/delivery_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
